{
  "name": "@hewes/react-json",
  "version": "0.1.0-alpha1",
  "main": "build/lib/index.js",
  "repository": "git@github.com:AubreyHewes/react-json.git",
  "author": "Aubrey Hewes <AubreyHewes@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "dev": "start-storybook",
    "build": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "storybook": "start-storybook -p 6006",
    "build:docs": "build-storybook -c .storybook -o docs",
    "serve:docs": "serve docs",
    "publish:docs": "now docs -n react-json --scope hewes",
    "prepublish": "yarn run lint"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "styled-components": "^5.3.1"
  },
  "peerDependencies": {
    "react": ">=16.8 <18"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@hewes/eslint-config": "^1.1.3",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.7",
    "@storybook/theming": "^6.3.7",
    "@types/react": "^17.0.19",
    "@types/styled-components": "^5.1.12",
    "autoprefixer": "^10.3.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.13.2",
    "bootstrap": "^4.6.0",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-promise": "^3.0.2",
    "sass": "^1.38.1",
    "sass-loader": "^12.1.0",
    "serve": "^12.0.0",
    "style-loader": "^3.2.1",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@hewes/eslint-config",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/prop-types": 0
    }
  },
  "eslintIgnore": [
    "build/",
    "docs/",
    "node_modules/"
  ],
  "prettier": {
    "printWidth": 120
  },
  "files": [
    "build/**/*",
    "!build/**/*.map",
    "!build/**/stories/**/*",
    "README.md",
    "LICENSE.md"
  ]
}
